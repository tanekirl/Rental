@model Rental.Data.Models.Order

@{
    ViewData["Title"] = "Редагувати";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">
    <h1>Редагувати замовлення</h1>
    <div class="card shadow-sm p-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
            <input type="hidden" asp-for="id" />

            <div class="form-group mb-3">
                <label asp-for="name" class="form-label">Ім'я</label>
                <input asp-for="name" class="form-control" placeholder="Введіть ім'я" />
                <span asp-validation-for="name" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="surname" class="form-label">Прізвище</label>
                <input asp-for="surname" class="form-control" placeholder="Введіть прізвище" />
                <span asp-validation-for="surname" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="adress" class="form-label">Адреса</label>
                <input asp-for="adress" class="form-control" placeholder="Введіть адресу" />
                <span asp-validation-for="adress" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="phone" class="form-label">Телефон</label>
                <input asp-for="phone" class="form-control" placeholder="Введіть телефон" />
                <span asp-validation-for="phone" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="email" class="form-label">Email</label>
                <input asp-for="email" class="form-control" placeholder="Введіть email" />
                <span asp-validation-for="email" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RentalStart" class="form-label">Початок оренди</label>
                <input asp-for="RentalStart" class="form-control" type="datetime-local" />
                <span asp-validation-for="RentalStart" class="text-danger"></span>
            </div>

            <div class="form-group mb-3">
                <label asp-for="RentalEnd" class="form-label">Кінець оренди</label>
                <input asp-for="RentalEnd" class="form-control" type="datetime-local" />
                <span asp-validation-for="RentalEnd" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-end mt-3">
                <a asp-action="Index" class="btn btn-secondary me-2">Назад до списку</a>
                <button a asp-action="Index" type="submit" class="btn btn-primary">Зберегти зміни</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
