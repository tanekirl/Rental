@model Car

<div class="col-lg-4">
    <img class="img-thumbnail" src="@Model.img" alt="@Model.name" />
    <h2>@Model.name</h2>
    <p>@Model.shortDesc</p>
    <p>Ціна за добу: @Model.price.ToString("C", new System.Globalization.CultureInfo("uk-UA"))</p>

    @if (User.Identity != null && User.Identity.IsAuthenticated)
    {
        <p><a class="btn btn-info" asp-controller="CarDetails" asp-action="Index" asp-route-id="@Model.id">Детальніше</a></p>
    }
</div>
