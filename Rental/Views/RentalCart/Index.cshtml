@{
    Layout = "_Layout";
}

@model RentalCartViewModel
<div class="container">
    @if (Model.rentalCart.listRentalItems.Count > 0)
    {
        @foreach (var el in Model.rentalCart.listRentalItems)
        {
            <div class="alert alert-warning mt-3">
                <b>Автомобіль:</b>@el.car.name<br />
                <b>Ціна за добу</b> @el.car.price.ToString("C", new System.Globalization.CultureInfo("uk-UA"))
                <form method="post" asp-controller="RentalCart" asp-action="removeFromCart">
                    <input type="hidden" name="id" value="@el.id" />
                    <button type="submit" class="btn btn-danger">x</button>
                </form>
            </div>
        }
        <hr />
        <h3>Загальна ціна: @Model.TotalPrice.ToString("C", new System.Globalization.CultureInfo("uk-UA"))</h3> <!-- Виведення загальної ціни -->
        <a class="btn btn-danger" asp-controller="Order" asp-action="Checkout">Оплатити</a>
    }
    else
    {
        <p>Додайте авто до кошика</p>
    }
</div>
