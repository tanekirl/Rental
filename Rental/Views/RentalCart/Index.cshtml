@{
    Layout = "_Layout";
}

@model RentalCartViewModel

<div class="container my-5">
    @if (Model.rentalCart.listRentalItems.Count > 0)
    {
        <h2 class="text-center mb-4">Кошик орендованих автомобілів</h2>

        @foreach (var el in Model.rentalCart.listRentalItems)
        {
            <div class="card mb-3 shadow-sm border-0">
                <div class="card-body d-flex justify-content-between align-items-center">
                    <div>
                        <h5 class="card-title mb-1 text-dark"><b>Автомобіль:</b> @el.car.name</h5>
                        <p class="mb-0">
                            <b class="price-text">Ціна за добу:</b>
                            <span class="price-text">
                                @el.car.price.ToString("C", new System.Globalization.CultureInfo("uk-UA"))
                            </span>
                        </p>
                    </div>
                    <form method="post" asp-controller="RentalCart" asp-action="removeFromCart" class="mb-0">
                        <input type="hidden" name="id" value="@el.id" />
                        <button type="submit" class="btn btn-outline-danger btn-sm" title="Видалити з кошика">
                            <i class="bi bi-trash"></i> Видалити
                        </button>
                    </form>
                </div>
            </div>
        }

        <div class="text-end mt-4">
            <h4 class="mb-3">
                Загальна ціна:
                <span class="total-price">
                    @Model.TotalPrice.ToString("C", new System.Globalization.CultureInfo("uk-UA"))
                </span>
            </h4>
            <a class="btn btn-success btn-lg" asp-controller="Order" asp-action="Checkout">Оформити</a>
        </div>
    }
    else
    {
        <div class="text-center">
            <p class="lead mt-5">Ваш кошик порожній. Додайте авто до кошика, щоб продовжити замовлення.</p>
        </div>
    }
</div>

<style>
    body {
        background: linear-gradient(180deg, #6a6e6c, #808783);
        color: #e0e0e0;
    }

    .price-text {
        color: #a8a8a8; /* Колір тексту для «Ціна за добу» і ціни */
        font-weight: bold;
    }

    .total-price {
        color: #b0b0b0; /* Трохи темніший колір для загальної ціни */
        font-weight: bold;
    }


</style>
